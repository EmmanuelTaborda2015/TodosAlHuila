<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

android:id="@+id/formularioBienvenida"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/azul1">

<ImageView
    android:layout_width="480dp"
    android:layout_height="300dp"
    android:id="@+id/imageView"
    android:src="@drawable/logohuila3"
    android:layout_marginBottom="80dp"
    android:layout_above="@+id/botonBienvenida"
    android:layout_centerHorizontal="true" />

<Button
    android:id="@+id/botonBienvenida"
    android:text="@string/botonBienvenida"

    android:textColor="#FFFFFFFF"
    android:textSize="25sp"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/buttonselect"
    android:shadowColor="#A8A8A8"
    android:paddingLeft="70dp"
    android:paddingRight="70dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:gravity="center_horizontal"
    android:layout_marginBottom="248dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true" />

</RelativeLayout>

